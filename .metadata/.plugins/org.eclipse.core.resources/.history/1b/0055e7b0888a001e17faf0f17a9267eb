<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.kh.springdb.mapper.LoginMapper">
	<resultMap id="" type="com.kh.springdb.model.User">
		<id property="mno" column="MNO" />
		<result property="mname" column="MNAME"></result>
		<result property="memail" column="MEMAIL"></result>
		<result property="mbirth" column="MBIRTH"></result>
	</resultMap>
	<select id="loginByMnameAndMemail" resultMap="">
		SELECT * FROM MEMBERINFO WHERE MNAME = #{mname} AND MEMAIL = #{memail}
	</select>
</mapper>


<!--
	resultMap : MyBatis에서 자바 객체와 데이터베이스의 결과에 대해 매핑하는 규칙을 정의하는데 사용
				id="select에서 resultMap에 resultMap에서 감싼 결과를 변수명으로 전달해주기 위한 이름" 
				type="가지고 올 모델의 패키지명을 작성해주어 자바 객체를 연결해줌"
		   id : 주요 키를 나타냄(primarykey)
	   result : id 값을 제외한 나머지 값을 나타냄

-->